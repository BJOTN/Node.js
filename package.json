{
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "strict": true,
    "allowImportingTsExtensions": true
  },
  "scripts": {
    "dev": "tsc-watch --noClear -p ./tsconfig.json --onSuccess \"node ./dist/server.js\""
  },
  "dependencies": {
    "dotenv": "^16.3.2",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "morgan": "^1.10.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg-promise": "^11.5.4"
  },
  "devDependencies": {
    "@tsconfig/node18": "^1.0.1",
    "@types/body-parser": "^1.19.5",
    "@types/express": "^4.17.14",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.11.9",
    "@types/passport-jwt": "^4.0.0",
    "ts-node": "^10.9.2",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.8.4"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
